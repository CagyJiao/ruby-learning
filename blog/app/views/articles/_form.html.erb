# partial file must be prefixed with an underscore, it is referenced without the underscore when rendeing.

# create a form via form builder 
<br>
<%= form_with model: article do |form| %>
    <div>
        <%= form.label :title %><br>
        # full_messages_for returns an array of user-friendly error messages for a specified attribute
        <br>
        <%= form.text_field :title %>
        <% @article.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %><br>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
        <% @article.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>